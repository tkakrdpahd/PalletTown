{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21
    },
    "configurePresets": [
      {
        "name": "default",
        "description": "Default configuration using vcpkg",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build",
        "cacheVariables": {
          "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
      }
    ]
}
